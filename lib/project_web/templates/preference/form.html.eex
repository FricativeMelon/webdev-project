<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :privacy %>
  <%= checkbox f, :privacy %>
  <%= error_tag f, :privacy %>

  <%= label f, :notify_freq %>
  <%= text_input f, :notify_freq %>
  <%= error_tag f, :notify_freq %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
